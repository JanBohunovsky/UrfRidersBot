{
    "Serilog": {
        "Using": [
            "UrfRidersBot"
        ],
        "Enrich": [
            "FromLogContext",
            "WithClassName",
            "WithMachineName",
            "WithProcessId",
            "WithThreadId"
        ],
        "MinimumLevel": {
            "Default": "Warning",
            "Override": {
                "Microsoft.Hosting.Lifetime": "Information"
            }
        },
        "WriteTo": {
            "ConsoleSink": {
                "Name": "Console",
                "Args": {
                    "theme": "UrfRidersBot.Common.Logging.UrfRidersLoggingConsoleTheme::Instance, UrfRidersBot",
                    "outputTemplate": "{Timestamp:HH:mm:ss} | {Level,-11} | {ClassName} | {Message}{NewLine}{Exception}"
                }
            },
            "FileSink": {
                "Name": "File",
                "Args": {
                    "path": "./logs/log-.txt",
                    "rollingInterval": "Day",
                    "outputTemplate": "{Timestamp:yyyy-MM-dd HH:mm:ss} | {Level} | {SourceContext} | {Message}{NewLine}{Exception}"
                }
            },
            "SeqSink": {
                "Name": "Seq",
                "Args": {
                    "serverUrl": "http://localhost:8082"
                }
            }
        }
    }
}